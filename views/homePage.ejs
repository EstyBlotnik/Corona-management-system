<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Corona Management System</title>
  <link rel="stylesheet" type="text/css" href="homePage.css">
</head>

<body>
  <div class="container">
    <div class="header">
      <h1>Welcome to our Corona Management System</h1>
      <p>To start, tap the login button.</p>
    </div>
    <a href="#" class="login-btn">Login</a>
    <form action="/login" method="POST" class="read-comment-form">
      <input type="hidden" name="login">
      <button type="submit" class="read-comment-button">Login</button>
    </form>
  </div>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
        const loginBtn = document.querySelector('.login-btn');
        loginBtn.addEventListener('click', async (event) => {
            event.preventDefault(); // Prevent default action of clicking the link
            try {
                const endpoint = '/login';
                const response = await fetch(endpoint, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                })
                .then(console.log('application/json'))
                .then(response => response.json())
                .then(data => window.location.href = data.redirect)
            } catch (error) {
                console.error('Error fetching login page:', error);
                // Handle error, show a message, or redirect to an error page
            }
        });
    });

  </script>
  <!-- <script src="homePage.js"></script> -->

</body>
</html>
